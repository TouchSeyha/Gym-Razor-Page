@page
@model Gym.Pages.Supervisors.EditModel

@{
    ViewData["Title"] = "Edit Supervisor";
    ViewData["Subtitle"] = "Update supervisor information";
}

<div class="row mb-4">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil me-2"></i>Edit Supervisor
                </h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Supervisor.Id" />

                    <div class="mb-3">
                        <label asp-for="Supervisor.FullName" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Supervisor.FullName" class="form-control" placeholder="Enter full name" />
                        </div>
                        <span asp-validation-for="Supervisor.FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.DateOfBirth" class="form-label">Birth Date</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            <input asp-for="Supervisor.DateOfBirth" class="form-control" type="date" />
                        </div>
                        <span asp-validation-for="Supervisor.DateOfBirth" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.PhoneNumber" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Supervisor.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        </div>
                        <span asp-validation-for="Supervisor.PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Supervisor.Email" class="form-control" placeholder="Enter email address" type="email" />
                        </div>
                        <span asp-validation-for="Supervisor.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.Gender" class="form-label"></label>
                        <select asp-for="Supervisor.Gender" class="form-select">
                            <option value="">Select gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Supervisor.Gender" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.Status" class="form-label"></label>
                        <select asp-for="Supervisor.Status" class="form-select">
                            <option value="">Select status</option>
                            <option value="Active" selected>Active</option>
                            <option value="On Leave">On Leave</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span asp-validation-for="Supervisor.Status" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />
                    <h6 class="mb-3"><i class="bi bi-shield-lock me-2"></i>Account Setup</h6>

                    <div class="mb-3">
                        <label asp-for="Supervisor.Login" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Supervisor.Login" class="form-control" placeholder="Create username" />
                        </div>
                        <span asp-validation-for="Supervisor.Login" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Supervisor.Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Supervisor.Password" class="form-control" placeholder="Create password" type="password" />
                        </div>
                        <span asp-validation-for="Supervisor.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
