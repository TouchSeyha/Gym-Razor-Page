<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-gradient navbar-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-activity me-2"></i>Fitness Hub
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people me-1"></i> Members
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-page="/Customers/Index">View All Customers</a></li>
                                <li><a class="dropdown-item" asp-page="/Customers/Create">Add New Customer</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="staffDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-badge me-1"></i> Staff
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="staffDropdown">
                                <li><a class="dropdown-item" asp-page="/Coaches/Index">Coaches</a></li>
                                <li><a class="dropdown-item" asp-page="/Supervisors/Index">Supervisors</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/GymHalls/Index">
                                <i class="bi bi-building me-1"></i> Facilities
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Schedules/Index">
                                <i class="bi bi-calendar-week me-1"></i> Schedules
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Privacy">
                                <i class="bi bi-shield-check me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <div class="page-banner mb-4">
            <h1>@ViewData["Title"]</h1>
            @if (ViewData["Subtitle"] != null)
            {
                <p class="lead">@ViewData["Subtitle"]</p>
            }
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-gradient navbar-primary py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 mb-2 mb-md-0">
                    <span class="footer-brand"><i class="bi bi-activity me-1"></i>Fitness Hub</span>
                    <span class="copyright ms-md-3">© @DateTime.Now.Year</span>
                </div>
                <div class="col-md-5 mb-2 mb-md-0">
                    <div class="quick-links d-flex justify-content-center">
                        <a class="footer-link text-white me-3" asp-area="" asp-page="/Index">Home</a>
                        <a class="footer-link text-white me-3" asp-area="" asp-page="/Privacy">Privacy</a>
                        <a class="footer-link text-white" href="#">Terms</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="social-icons-compact d-flex justify-content-end">
                        <a href="#" class="social-icon-sm me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-icon-sm me-2"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-icon-sm me-2"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="social-icon-sm "><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
