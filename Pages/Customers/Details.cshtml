@page
@model Gym.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Customer Details";
    ViewData["Subtitle"] = "View customer information";
}

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person-badge me-2"></i>@Model.Customer.FullName
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-3 text-center mb-3 mb-md-0">
                        <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                            @Model.Customer.FullName.Substring(0, 1)
                        </div>
                        <h5 class="mb-1">@Model.Customer.FullName</h5>
                        <p class="text-muted mb-0">@Model.Customer.Gender</p>
                    </div>
                    <div class="col-md-9">
                        <div class="row g-0">
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-calendar me-2 text-muted"></i>Birth Date</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Customer.DateOfBirth)</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-telephone me-2 text-muted"></i>Phone</strong>
                                <div class="mt-1">
                                    <a href="tel:@Model.Customer.PhoneNumber" class="text-decoration-none">
                                        @Html.DisplayFor(m => m.Customer.PhoneNumber)
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-envelope me-2 text-muted"></i>Email</strong>
                                <div class="mt-1">
                                    <a href="mailto:@Model.Customer.Email" class="text-decoration-none">
                                        @Html.DisplayFor(m => m.Customer.Email)
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-person-badge me-2 text-muted"></i>Username</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Customer.Login)</div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h6 class="mb-3"><i class="bi bi-shield-lock me-2"></i>Account</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>Password</strong>
                        <div class="mt-1">••••••••</div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <a asp-page="./Edit" asp-route-id="@Model.Customer.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-1"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mt-4 mt-lg-0">
        <div class="card bg-light">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Note</h5>
            </div>
            <div class="card-body">
                <p class="mb-0 text-muted">
                    Review customer details carefully before making changes.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-lg {
        width: 100px;
        height: 100px;
        font-size: 40px;
    }
</style>
