@page
@model Gym.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create Customer";
}

<div class="container mt-4">
    <h1>Create Customer</h1>
    <p class="lead">Add a new customer to the system</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.FullName" class="form-label">Full Name</label>
                        <input asp-for="Customer.FullName" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.DateOfBirth" class="form-label">Date of Birth</label>
                        <input asp-for="Customer.DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="Customer.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Email" class="form-label">Email Address</label>
                        <input asp-for="Customer.Email" class="form-control" type="email" placeholder="name@example.com" />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Gender" class="form-label">Gender</label>
                        <select asp-for="Customer.Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Non-Binary">Non-Binary</option>
                            <option value="Prefer not to say">Prefer not to say</option>
                        </select>
                        <span asp-validation-for="Customer.Gender" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4">
                <h5>Account Information</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Login" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Customer.Login" class="form-control" placeholder="Choose a username" />
                        </div>
                        <span asp-validation-for="Customer.Login" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Customer.Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Customer.Password" class="form-control" type="password" placeholder="Enter password" />
                        </div>
                        <span asp-validation-for="Customer.Password" class="text-danger"></span>
                        <div class="form-text">Password must be at least 8 characters long with letters and numbers.</div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Create Customer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add Bootstrap validation styles on form submit
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
