@page
@model Gym.Pages.Coaches.DeleteModel

@{
    ViewData["Title"] = "Delete Coach";
    ViewData["Subtitle"] = "Confirm coach deletion";
}

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-person-x me-2"></i>Delete Coach
                </h5>
            </div>
            <div class="card-body">
                <h3 class="text-danger">Are you sure you want to delete this coach?</h3>
                <div class="row mb-4">
                    <div class="col-md-3 text-center mb-3 mb-md-0">
                        <div class="avatar-lg bg-danger text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                            @Model.Coach.FullName.Substring(0, 1)
                        </div>
                        <h5 class="mb-1">@Model.Coach.FullName</h5>
                        <p class="text-muted mb-0">@Model.Coach.Gender</p>
                    </div>
                    <div class="col-md-9">
                        <div class="row g-0">
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-calendar me-2 text-muted"></i>Birth Date</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Coach.Date)</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-telephone me-2 text-muted"></i>Phone</strong>
                                <div class="mt-1">
                                    <a href="tel:@Model.Coach.PhoneNumber" class="text-decoration-none">
                                        @Html.DisplayFor(m => m.Coach.PhoneNumber)
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-envelope me-2 text-muted"></i>Email</strong>
                                <div class="mt-1">
                                    <a href="mailto:@Model.Coach.Email" class="text-decoration-none">
                                        @Html.DisplayFor(m => m.Coach.Email)
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-person-badge me-2 text-muted"></i>Username</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Coach.Login)</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-award me-2 text-muted"></i>Specialization</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Coach.Specialization)</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-clock me-2 text-muted"></i>Working Hours</strong>
                                <div class="mt-1">@Html.DisplayFor(m => m.Coach.WorkingHours)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <form method="post" class="d-flex justify-content-between">
                    <input type="hidden" asp-for="Coach.Id" />
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mt-4 mt-lg-0">
        <div class="card bg-light">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Note</h5>
            </div>
            <div class="card-body">
                <p class="mb-0 text-muted">
                    Deleting a coach is a permanent action and cannot be undone.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-lg {
        width: 100px;
        height: 100px;
        font-size: 40px;
    }
</style>

